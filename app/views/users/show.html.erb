<p><%= @user.name %> | <%=@user.email%> </p>

<h1> Events Hosted </h1>


<table>
    <thead>
        <tr>
            <th>Upcoming Events</th>
            <th style='padding-left:25px'>Event Date</th>
            <th style='padding-left:25px'>Link</th>
        </tr>
    </thead>

    <tbody>



        <% @events.each do |x| %>
        <% if (x.eventdate - Date.today > 0) %>
        <tr>
            <td><%= x.description %></td>
            <td style='padding-left:25px'><%= x.eventdate.strftime(' %d-%m-%Y') %></td>
            <td style='padding-left:25px'><%= link_to 'Show', x %></td>

        </tr>
        <%end%>

        <%end%>
    </tbody>
</table>
<br>
<hr>
<br>

<table>
    <thead>
        <tr>
            <th>Past Events</th>
            <th style='padding-left:25px'>Event Date</th>
            <th style='padding-left:25px'>Link</th>
        </tr>
    </thead>

    <tbody>



        <% @events.each do |x| %>
        <% if (x.eventdate - Date.today <= 0) %>
        <tr>
            <td><%= x.description %></td>
            <td style='padding-left:25px'><%= x.eventdate.strftime(' %d-%m-%Y') %></td>
            <td style='padding-left:25px'><%= link_to 'Show', x %></td>

        </tr>
        <%end%>

        <%end%>
    </tbody>
</table>